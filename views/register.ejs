<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <% include('partials/navbar', { page: 'register' }) %>
  
  <div class="container mx-auto">
    <div class="max-w-md mx-auto mt-6">
      <% if(typeof successMessage !== 'undefined') { %>
        <div class="success-message">
          <span><%= successMessage %></span>
        </div>
        <a href="/login" class="btn">Proceed to Log in</a>
      <% } else { %>
        <form action="/register" method="POST" class="card shadow-md p-6">
          <h2 class="text-2xl font-semibold mb-4">Register</h2>
          <% if(typeof errorMessage !== 'undefined') { %>
            <div class="alert">
              <span><%= errorMessage %></span>
            </div>
          <% } %>
          <div class="form-control">
            <label class="label">
              <span class="label-text">User Name</span>
            </label>
            <input type="text" name="userName" placeholder="User Name" required class="input">
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Password</span>
            </label>
            <input type="password" name="password" placeholder="Password" required class="input">
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Confirm Password</span>
            </label>
            <input type="password" name="password2" placeholder="Confirm Password" required class="input">
          </div>
          <div class="form-control">
            <label class="label">
              <span class="label-text">Email Address</span>
            </label>
            <input type="email" name="email" placeholder="Email Address" required class="input">
          </div>
          <button type="submit" class="btn">Register</button>
        </form>
      <% } %>
    </div>
  </div>
</body>
</html>
